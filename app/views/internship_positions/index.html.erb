<div class="jumbotron tron">
  <h1>Internship Positions</h1>
  <div class="row">
  <% if admin_signed_in? %>
    <div class="col-md-8">
  <% else %>
    <div class="col-md-12">
  <% end %>
      <table class="table">
        <thead>
          <tr style="color: #FFFFFF;">
            <th>Position</th>
            <th>Company</th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody>
          <% @internship_positions.each do |internship_position| %>
            <tr>
              <td><%= internship_position.position %></td>
              <td><%= internship_position.company %></td>
              <td><%= link_to internship_position.link %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <% if admin_signed_in? %>
      <div class="col-md-4">
        <table class="table">
          <thead>
            <tr style="color: #FFFFFF;">
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @internship_positions.each do |internship_position| %>
              <tr>
                <td class="btn-group right"><%= link_to 'Show', internship_position, :class => 'btn btn-info glyphicon glyphicon-search' %>
                  <%= link_to 'Edit', edit_internship_position_path(internship_position), :class => 'btn btn-warning glyphicon glyphicon-pencil' %>
                  <%= link_to 'Destroy', internship_position, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger glyphicon glyphicon-remove" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <br>
  <% if admin_signed_in? %>
    <%= link_to 'New Internship position', new_internship_position_path, :class=>"btn btn-success glyphicon glyphicon-plus" %>
  <% end %>
</div>