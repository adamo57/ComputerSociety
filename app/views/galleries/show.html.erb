<div class="row tron-font">
  <h1 >Gallery</h1>

  <input type="hidden" id="galleryID" value="<%= @gallery.id %>">

  <p class="tron-font">
    <b>Name: </b>
    <%= @gallery.name %>
  </p>

  <p class="tron-font">
    <b>Description: </b>
    <%= @gallery.description %>
  </p>

<h2 class="tron-font">Pictures</h2>
</div>

<div class="row tron-font">
  <ul class="list-inline">
  <% unless @pictures.empty? %>
    <% @pictures.each do |pic| %>
      <li class="span3 tron-thumbnail col-md-3" id="picture_<%= pic.id %>">
        <div class="thumbnail">
          <%= image_tag pic.image.url %>
        </div>
        <div class="caption tron-font">
          <p style="text-align: center;">
          <%= 
            link_to "", picture_path(pic),
            :class => 'glyphicon glyphicon-pencil'
          %>

          <%=
            link_to "", pic,
              :data => { :confirm => "Are you sure?" },
              :method => :delete, :class => 'glyphicon glyphicon-remove'
            %>

          </p>
        </div>
      </li>
    <% end %>
  <% end %>
  </ul>
</div>
<div class="row">
  <div class="col-md-12 form-actions tron-font">
    <%= link_to 'Back', galleries_path, :class => 'btn btn-primary'  %>
    <%= link_to 'Edit gallery', edit_gallery_path(@gallery), :class => 'btn btn-success' %>
    <%= link_to 'Delete gallery', gallery_path(@gallery), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
  </div> 
</div>